.w3-container
  #contact.w3-center
    %p.w3-border-bottom.w3-border-light-grey.w3-padding-16
  .w3-card-2.w3-content{:style => "max-width:900px"}
    .w3-container.w3-black.w3-center
      %h3 Story
    .w3-container
      = simple_form_for @story, :html => {:class => 'form-horizontal' } do |f|
        .w3-row.w3-section
          = f.text_field :title, class: "w3-input", required: true
          = f.label :title
        .w3-row.w3-section
          = f.text_area :story, rows: 10, class: "w3-input", required: true
          = f.label :story
          = f.submit 'Create', class: "w3-button w3-block w3-section w3-light-gray w3-ripple w3-padding"
